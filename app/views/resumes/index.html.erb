<h1>Listing resumes</h1>

<ul id="resumes-list">
</ul>

<script id="resume-template" type="text/x-handlebars-template">
  <li class="resume">
    <h1>{{ name }}</h1>
    <ul id="sections-list-{{ id }}">
    </ul>
    <a href="#" id="section-create-{{ id }}" data-type="text" data-pk="{{ id }}">Create Section</a> 
  </li>
</script>
<script id="section-template" type="text/x-handlebars-template">
  <li id="section-{{ id }}" class="section">
    
    <h3><a href="#" id="section-edit-{{ id }}" data-type="text" data-pk="{{ id }}">{{ name }}</a>
    </h3>
    <button class="delete-section" data="{{ id }}">Delete</button></h3>
    <ul id="parts-list-{{ id }}">
    </ul>
    <a href="#" id="part-create-{{ id }}" data-type="text" data-pk="{{ id }}">Create Part</a>

  </li>
</script>
<script id="part-template" type="text/x-handlebars-template">
  <li id="part-{{ id }}" class="part">
    <h5><a href="#" class="myeditable-{{ id }} editable editable-click editable-unsaved" id="new-name-{{ id }}" data-type="text" data-name="name" data-original-title="Enter name">{{ name }}</a><button class="delete-part" data="{{ id }}">Delete</button></h5>
    <p><a href="#" class="myeditable-{{ id }} editable editable-click editable-unsaved" id="new-location-{{ id }}" data-type="text" data-name="location" data-original-title="Enter location">{{ location }}</a></p>
    <p><a href="#" class="myeditable-{{ id }} editable editable-click editable-unsaved" id="new-startdate-{{ id }}" data-type="text" data-name="start_date" data-original-title="Enter start date">{{ start_date }}</a> - <a href="#" class="myeditable-{{ id }} editable editable-click editable-unsaved" id="new-enddate-{{ id }}" data-type="text" data-name="location" data-original-title="Enter location">{{ end_date }}</a></p>
    <p><a href="#" class="myeditable-{{ id }} editable editable-click editable-unsaved" id="new-notes-{{ id }}" data-type="text" data-name="notes" data-original-title="Enter notes">{{ notes }}</a></p>
    
    <button id="save-btn-{{ id }}" val="{{ id }}" class="btn btn-primary">Save new user!</button>
    <button id="reset-btn-{{ id }}" class="btn pull-right">Reset</button>
  </li>
</script>

<br />

