<p id="notice"><%= notice %></p>

<div>
  <%= @resume.name %>
  <% @resume.sections.each do |section| %>
    <h2><%= section.name %></h2>
    <% section.parts.each do |part| %>
      <h3><%= part.name %></h3>
      <p><%= part.details[:location] %></p>
    <% end %>
  <% end %>
</div>

<%= form_for(@section) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script id="entry-template" type="text/x-handlebars-template">
<div class="entry">
<h1>{{title}}</h1>
  <div class="body">
    {{body}}
  </div>
</div>
</script>

<%= link_to 'Edit', edit_resume_path(@resume) %> |
<%= link_to 'Back', resumes_path %>
