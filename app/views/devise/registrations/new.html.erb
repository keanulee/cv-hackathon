<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html => { :class => "register-form-page" }) do |f| %>
  <%= devise_error_messages! %>

  <h2 class="form-signin-heading">Register your pinpointCV account</h2>

  <div class="control-group">
    <label class="login-field-icon fui-mail-16" for="email"></label>
    <%= f.email_field :email, autofocus: true, placeholder: "Enter your email address" %>
  </div>

  <div class="control-group">
    <label class="login-field-icon fui-lock-16" for="password"></label>
    <%= f.password_field :password, class: "login-field", placeholder: "Password" %>
  </div>

  <div class="control-group">
    <label class="login-field-icon fui-lock-16" for="password_confirmation"></label>
    <%= f.password_field :password_confirmation, class: "login-field", placeholder: "Password Confirm" %>
  </div>

  <%= f.submit "Sign up", class: "btn btn-large btn-success" %>

  <br />
  <%= render "devise/shared/links" %>
<% end %>
